<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailtimelineActivity">

    <ScrollView
        android:layout_width="405dp"
        android:layout_height="672dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="610dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/postdayText"
                android:layout_width="150dp"
                android:layout_height="16dp"
                android:text="投稿日：yyyy/mm/dd" />

            <ImageView
                android:id="@+id/postImage"
                android:layout_width="339dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/titleName"
                android:layout_width="333dp"
                android:layout_height="46dp"
                android:text="カフェに行く人募集"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/overviewText"
                android:layout_width="347dp"
                android:layout_height="114dp"
                android:text="大阪の梅田周辺でカフェに付き合ってくれる人を募集しています。お気軽にお声がけお願いします。"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="yyyy/mm/ddまで" />


            <View
                android:id="@+id/line1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#A5A5A5"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="希望条件" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="定員：５名" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="性別：指定なし" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="年代：指定なし" />

            <View
                android:id="@+id/line２"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#A5A5A5"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/contributorText"
                android:layout_width="69dp"
                android:layout_height="16dp"
                android:gravity="center_horizontal"
                android:text="投稿者" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/contributorImage"
                        android:layout_width="69dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/ic_launcher_foreground" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="301dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/deadliine"
                        android:layout_width="289dp"
                        android:layout_height="60dp"
                        android:gravity="left"
                        android:text="山田花子"
                        android:textSize="16sp" />


                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/line３"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#A5A5A5"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/DMButton"
                android:layout_width="183dp"
                android:layout_height="56dp"
                android:text="メッセージを送る" />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>