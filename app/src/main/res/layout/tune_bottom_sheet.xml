<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tunebottomSheet"
    android:orientation="vertical"
    android:background="@drawable/adjustlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="true">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:text="絞り込む"
        android:textAlignment="center"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="34dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_fastfood_24" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="295dp"
            android:layout_height="30sp"
            android:text=" 料理・グルメ"
            android:textAlignment="textStart" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="105dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_wine_bar_24"/>

        <TextView
            android:id="@+id/textView23"
            android:layout_width="355dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="お酒"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="39dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_directions_run_24" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="289dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="スポーツ" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_videogame_asset_24" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="254dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="ゲーム" />
    </LinearLayout>
</LinearLayout>